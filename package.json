{
  "name": "@expelledboy/ink-storybook",
  "version": "0.1.6",
  "description": "A storybook-like library for Ink terminal applications",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ink-storybook": "./bin/ink-storybook.js"
  },
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    },
    "./cli": {
      "import": "./dist/src/cli/index.js",
      "types": "./dist/src/cli/index.d.ts"
    },
    "./ts": {
      "import": "./bin/ts-ink-storybook.ts",
      "types": "./bin/ts-ink-storybook.ts"
    }
  },
  "files": [
    "dist",
    "bin",
    "docs",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -w",
    "prepublishOnly": "npm run build",
    "example": "sh ./run-example.sh",
    "test": "CI=true bash ./tests/run-test.sh",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepare": "npm run build",
    "version": "npm run build",
    "postversion": "git push && git push --tags",
    "storybook:ts": "npx tsx ./bin/ts-ink-storybook.ts",
    "install-ts-deps": "npm install --save-dev typescript tsx"
  },
  "dependencies": {
    "ink": "^4.4.1",
    "react": "^18.2.0",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@swc-node/register": "^1.8.0",
    "@swc/core": "^1.11.9",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "ink": ">=3.0.0",
    "react": ">=17.0.0"
  },
  "keywords": [
    "ink",
    "storybook",
    "react",
    "terminal",
    "cli",
    "components",
    "ui"
  ],
  "author": "expelledboy <102334+expelledboy@users.noreply.github.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/expelledboy/ink-storybook.git"
  },
  "bugs": {
    "url": "https://github.com/expelledboy/ink-storybook/issues"
  },
  "homepage": "https://github.com/expelledboy/ink-storybook#readme"
}
